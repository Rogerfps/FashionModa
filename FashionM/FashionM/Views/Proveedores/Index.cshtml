@model IEnumerable<Proveedores>

<h2>Proveedores</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Nuevo Proveedor</a>

<form asp-action="Index" method="get" class="mb-3">
    <div class="row g-2">
        <div class="col-md-6">
            <input type="text"
                   name="buscar"
                   value="@Context.Request.Query["buscar"]"
                   class="form-control"
                   placeholder="Buscar por nombre, cédula o teléfono" />
        </div>

        <div class="col-md-4">
            <select name="estado" class="form-control">
                <option value="">-- Todos --</option>
                <option value="true"
                        selected="@(Context.Request.Query["estado"] == "true")">
                    Activos
                </option>
                <option value="false"
                        selected="@(Context.Request.Query["estado"] == "false")">
                    Inactivos
                </option>
            </select>
        </div>

        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">
                Filtrar
            </button>
        </div>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Cédula</th>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Teléfono</th>
            <th>Actividad</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Cedula</td>
                <td>@item.Nombre @item.Apellidos</td>
                <td>@item.Correo</td>
                <td>@item.Telefono</td>
                <td>@item.Actividad</td>
                <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                <td>
                    <a asp-action="Details"
                       asp-route-id="@item.Cedula"
                       class="btn btn-info btn-sm">
                        Detalles
                    </a>
                    <a asp-action="Edit"
                       asp-route-id="@item.Cedula"
                       class="btn btn-warning btn-sm">
                        Editar
                    </a>
                    <a asp-action="Delete"
                       asp-route-id="@item.Cedula"
                       class="btn btn-danger btn-sm">
                        Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPaginas > 1)
{
    <nav>
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-buscar="@Context.Request.Query["buscar"]"
                       asp-route-estado="@Context.Request.Query["estado"]">
                        @i
                    </a>
                </li>
            }
        </ul>
    </nav>
}