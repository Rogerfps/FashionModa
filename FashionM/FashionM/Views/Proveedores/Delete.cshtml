@model Proveedores

<h2>Eliminar Proveedor</h2>

<div class="alert alert-danger">
    <strong>Atención:</strong> Esta acción no se puede deshacer.
</div>

<div class="card">
    <div class="card-body">

        <dl class="row">
            <dt class="col-sm-3">Cédula</dt>
            <dd class="col-sm-9">@Model.Cedula</dd>

            <dt class="col-sm-3">Nombre</dt>
            <dd class="col-sm-9">@Model.Nombre @Model.Apellidos</dd>

            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Correo</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>

            <dt class="col-sm-3">Comercio</dt>
            <dd class="col-sm-9">@Model.Comercio</dd>

            <dt class="col-sm-3">Actividad Económica</dt>
            <dd class="col-sm-9">@Model.Actividad</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @(Model.Estado ? "Activo" : "Inactivo")
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Cedula" />

            <button type="submit" class="btn btn-danger">
                Eliminar
            </button>

            <a asp-action="Index" class="btn btn-secondary">
                Cancelar
            </a>
        </form>

    </div>
</div>