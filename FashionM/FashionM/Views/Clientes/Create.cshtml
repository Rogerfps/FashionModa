@model Clientes

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- 🔴 CAMBIO MÍNIMO: mostrar errores generales -->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>  

    <div class="form-group">
        <label asp-for="Cedula"></label>
        <input asp-for="Cedula" class="form-control" />
        <span asp-validation-for="Cedula" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Apellidos"></label>
        <input asp-for="Apellidos" class="form-control" />
        <span asp-validation-for="Apellidos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IDTipo"></label>
        <select asp-for="IDTipo"
                asp-items="ViewBag.TiposIdentificacion"
                class="form-control">
            <option value="">-- Seleccione tipo de identificación --</option>
        </select>
        <span asp-validation-for="IDTipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comercio"></label>
        <input asp-for="Comercio" class="form-control" />
        <span asp-validation-for="Comercio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="form-check">
        <input asp-for="Estado" class="form-check-input" />
        <label asp-for="Estado" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-success mt-3">Guardar</button>
</form>