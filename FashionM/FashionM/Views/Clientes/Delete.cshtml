@model Clientes

<h2>Eliminar Cliente</h2>
<hr />

<div class="alert alert-danger">
    <strong>⚠ Atención:</strong>
    ¿Está seguro que desea eliminar este cliente?
</div>

<dl class="row">
    <dt class="col-sm-3">Cédula</dt>
    <dd class="col-sm-9">@Model.Cedula</dd>

    <!-- ✅ NUEVO -->
    <dt class="col-sm-3">Código</dt>
    <dd class="col-sm-9">@Model.Codigo</dd>

    <dt class="col-sm-3">Nombre</dt>
    <dd class="col-sm-9">@Model.Nombre @Model.Apellidos</dd>

    <dt class="col-sm-3">Tipo</dt>
    <dd class="col-sm-9">@Model.IDTipo</dd>

    <dt class="col-sm-3">Correo</dt>
    <dd class="col-sm-9">@Model.Correo</dd>

    <dt class="col-sm-3">Teléfonos</dt>
    <dd class="col-sm-9">@Model.Telefonos</dd>

    <!-- ✅ NUEVOS -->
    <dt class="col-sm-3">Agente</dt>
    <dd class="col-sm-9">@Model.Agente</dd>

    <dt class="col-sm-3">Transporte</dt>
    <dd class="col-sm-9">@Model.Transporte</dd>

    <dt class="col-sm-3">Actividad Económica</dt>
    <dd class="col-sm-9">@Model.ActividadEconomica</dd>

    <dt class="col-sm-3">Límite de Crédito</dt>
    <dd class="col-sm-9">@Model.LimiteCredito.ToString("N2")</dd>

    <dt class="col-sm-3">Zona</dt>
    <dd class="col-sm-9">@Model.Zona</dd>

    <dt class="col-sm-3">Estado</dt>
    <dd class="col-sm-9">
        @(Model.Estado ? "Activo" : "Inactivo")
    </dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Cedula" />

    <button type="submit" class="btn btn-danger">
        Eliminar
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        Cancelar
    </a>
</form>