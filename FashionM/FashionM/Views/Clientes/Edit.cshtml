@model Clientes

<h2>Editar Cliente</h2>
<hr />

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Cedula" />

    <!-- ✅ NUEVO -->
    <div class="form-group">
        <label asp-for="Codigo"></label>
        <input asp-for="Codigo" class="form-control" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Apellidos"></label>
        <input asp-for="Apellidos" class="form-control" />
        <span asp-validation-for="Apellidos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IDTipo"></label>
        <select asp-for="IDTipo"
                asp-items="ViewBag.TiposIdentificacion"
                class="form-control">
            <option value="">-- Seleccione tipo --</option>
        </select>
        <span asp-validation-for="IDTipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Correo"></label>
        <input asp-for="Correo" class="form-control" />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <!-- Teléfonos -->
    <div class="form-group">
        <label asp-for="Telefonos"></label>
        <input asp-for="Telefonos" class="form-control" />
        <span asp-validation-for="Telefonos" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Comercio"></label>
        <input asp-for="Comercio" class="form-control" />
        <span asp-validation-for="Comercio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <!-- ✅ NUEVOS -->
    <div class="form-group">
        <label asp-for="Agente"></label>
        <input asp-for="Agente" class="form-control" />
        <span asp-validation-for="Agente" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Transporte"></label>
        <input asp-for="Transporte" class="form-control" />
        <span asp-validation-for="Transporte" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ActividadEconomica"></label>
        <input asp-for="ActividadEconomica"
               class="form-control"
               step="0.01" />
        <span asp-validation-for="ActividadEconomica" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LimiteCredito"></label>
        <input asp-for="LimiteCredito"
               class="form-control"
               step="0.01" />
        <span asp-validation-for="LimiteCredito" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Zona"></label>
        <input asp-for="Zona" class="form-control" />
        <span asp-validation-for="Zona" class="text-danger"></span>
    </div>

    <div class="form-check mt-2">
        <input asp-for="Estado" class="form-check-input" />
        <label asp-for="Estado" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary mt-3">
        Guardar Cambios
    </button>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        Cancelar
    </a>
</form>